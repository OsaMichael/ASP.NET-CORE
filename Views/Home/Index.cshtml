@model HomeViewModel


        <h2 class="" style="color:aqua">@Model.Title</h2>

        @foreach(var pie in Model.Pies)
        {
       <div class="col-sm-4 col-lg-4 col-md-4">
        <div class="thumbnail">
         <img src="@pie.ImageThumbnailUrl" alt="" />
         <div class="caption">
             <h3 class="pull-right">@pie.Price.ToString("c")</h3>
             <h3>
                 @*navigating the controller in the view*@
                 <a asp-controller="Home" asp-action="Details"
                  asp-route-id="@pie.Id"> @pie.Name</a>
             </h3>
             <p>@pie.ShortDiscription</p>
         </div>
        </div>
       </div>
        }
   